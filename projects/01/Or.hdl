/**
 * Or gate:
 * out = (((a == 1) || (b == 1))), 1, 0) 
 */
CHIP Or {
    IN a, b;
    OUT out;

    PARTS:
	//Use De Morgan Formula
	Not(in=a ,out=nota);
	Not(in=b ,out=notb);
	And(a=nota ,b=notb ,out=temp1);
	Not(in=temp1 ,out=out);
}
